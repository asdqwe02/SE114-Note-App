<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteApp" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Primary brand color. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/dark_lue</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="android:windowAnimationStyle">@style/animation</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Atttemp to make rounded bottomsheet dialog-->
    <!-- BottomSheet -->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

<!--    general style for bottom sheet-->
    <style name="Icon_bottom_sheet" parent="Theme.MaterialComponents">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

<!--    use for text of bottom sheet-->
    <style name="Text_bottom_sheet" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <!--floating button-->
    <style name="labelStyle">

    </style>

    <!--style for switch on button-->
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/blue_light</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--Animation for dialog and so more-->
    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>