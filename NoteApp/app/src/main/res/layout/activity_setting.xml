<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="69dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Display Setting"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_horizontal">
        </TextView>

        <Switch
            android:id="@+id/swdarkmode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Dark Mode" />

        <Switch
            android:id="@+id/swnotidelete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Show notification before delete notes"
            android:checked="true"/>

        <Switch
            android:id="@+id/swaddlocation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Add new note to the end" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Reminder Setting"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_horizontal">
        </TextView>

        <Switch
            android:id="@+id/swnotionly"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Only notifications" />

        <Switch
            android:id="@+id/swsoundonly"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Only sounds" />

        <Switch
            android:id="@+id/swbothnoti"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Both notifications and sounds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Others"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_horizontal">
        </TextView>

        <TextView
            android:id="@+id/textViewpassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:text="Passwords setting" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>