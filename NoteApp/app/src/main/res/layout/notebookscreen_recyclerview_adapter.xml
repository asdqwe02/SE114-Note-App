<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_notebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:contextClickable="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <View
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="3dp"
                android:background="@color/blue_light" />

            <ImageView
                android:id="@+id/icon_notebook"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent_color"
                android:paddingLeft="5dp"
                android:src="@drawable/ic_note_book" />

            <TextView
                android:id="@+id/item_notebookscreen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/icon_notebook"
                android:layout_weight="12"
                android:paddingLeft="20dp"
                android:text="Text"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/menu_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/item_notebookscreen"
                android:background="@color/transparent_color"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_more_vert" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>