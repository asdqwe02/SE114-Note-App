<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_notebookscreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_share_24"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:text="Share this Note"
        android:textSize="25dp"
        ></TextView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_create_24"></ImageView>

        <TextView
            android:layout_width="345dp"
            android:layout_height="31dp"
            android:text="    Rename"
            android:textColor="@color/black"
            android:textSize="25dp"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_vpn_key_24"></ImageView>

        <TextView
            android:layout_width="345dp"
            android:layout_height="31dp"
            android:textColor="@color/black"
            android:text="    Lock this Note"
            android:textSize="25dp"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/remove_layout_item_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:src="@drawable/trash_can"></ImageView>

        <TextView
            android:layout_width="345dp"
            android:layout_height="31dp"
            android:text="    Move to Trash"
            android:textColor="@color/black"
            android:textSize="25dp"></TextView>
    </LinearLayout>

</LinearLayout>