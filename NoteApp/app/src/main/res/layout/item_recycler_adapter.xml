<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_notebook"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:src="@drawable/notebook_icon"></ImageView>

        <TextView
            android:id="@+id/item_notebookscreen"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/icon_notebook"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <ImageButton
            android:id="@+id/menu_item"
            android:layout_width="61dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/item_notebookscreen"
            android:backgroundTint="@color/white"
            android:src="@drawable/menu_item_recycler"></ImageButton>
    </LinearLayout>
</RelativeLayout>